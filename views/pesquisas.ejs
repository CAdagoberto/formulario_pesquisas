<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Formulário de Pesquisa</title>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css"
    rel="stylesheet"
    crossorigin="anonymous"
  />
</head>
<body>
  <div class="container py-5">
    <div class="text-center mb-4">
      <h2 class="mb-3">Ficha da Pesquisa</h2>
      <a href="/" class="btn btn-dark btn-sm">Fazer novas pesquisas</a>
      <a href="/download-excel" class="btn btn-dark btn-sm">Download planilha</a>
    </div>
    <hr class="mb-4"> 

    <% pesquisa.forEach(p => { %>
      <div class="card mb-4 shadow-sm">
        <div class="card-body">
          <h5 class="card-title mb-3">Pesquisa ID: <%= p.id_pesquisas %></h5>
          <div class="row">
            <div class="col-md-6">
              <p><strong>Nome:</strong> <%= p.nome %></p>
              <p><strong>Empresa:</strong> <%= p.nome_empresa || "Não Informado" %></p>
              <p><strong>Idade:</strong> <%= p.idade %> anos</p>
              <p><strong>Telefone:</strong> <%= p.telefone %></p>
              <p><strong>Endereço:</strong> <%= p.endereco %></p>
              <% if (p.numero_cnpj && p.numero_cnpj !== "Não informou CNPJ") { %>
                <p><strong>CNPJ:</strong> <%= p.numero_cnpj %></p>
              <% } %>
            </div>

            <div class="col-md-6">
              <p><strong>Tem funcionário:</strong> <%= p.funcionario ? "Sim" : "Não" %></p>
              <p><strong>Parceiros:</strong> <%= p.parceiros || "Não Informado" %></p>
              <p><strong>Compras:</strong> R$ <%= p.compras.toFixed(2).replace(".", ",") %></p> <!-- Ajustando a exibição de valores float -->
              <% if (p.contador) { %>
                <p><strong>Possui contador:</strong> Sim</p>
              <% } %>
              <% if (p.inss) { %>
                <p><strong>Contribui com INSS:</strong> Sim</p>
              <% } %>
              <p><strong>Observações:</strong> <%= p.obs || "Sem Observações" %></p>
            </div>
          </div>
        </div>
      </div>
    <% }) %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
</body>
</html>
